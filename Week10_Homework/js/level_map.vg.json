{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "title": {
    "text": "Water levels over time"
  },
  "data": {
    "url": "data/River_Heights_Selected.csv"
  },
  "encoding": {
    "x": {
      "field": "Day",
      "type": "temporal",
      "axis": {
        "title": "Date"
      }
    },
    "y": {
      "field": "Mean",
      "type": "quantitative",
      "axis": {
        "title": "River height (m)"
      }
    },
    "color": {
      "field": "Station",
      "type": "nominal"
    },
    "tooltip": [
      {
        "field": "Station",
        "type": "nominal"
      },
      {
        "field": "Mean",
        "type": "quantitative",
        "format": ".1f",
        "title": "Water level (m)"
      }
    ]
  },
  "mark": "line",
  "params": [
    {
      "name": "Basin",
      "value": "Campaspe River Basin",
      "bind": {
        "input": "select",
        "options": [
          "Campaspe River Basin",
          "Murray Basin",
          "Goulburn River Basin"
        ]
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Basin == Basin"
    }
  ]
}