{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/LocationsHeights.csv"
  },
  "title": {
    "text": "Water levels over time"
  },
  "hconcat": [
    {
      "width": 450,
      "height": 500,
      "title": "Maximum river heights and flood classifications",
      "projection": {
        "type": "equirectangular",
        "center": [
          144.3,
          -36.5
        ],
        "scale": 20000
      },
      "layer": [
        {
          "data": {
            "url": "data/reservoirs.topojson",
            "format": {
              "type": "topojson",
              "feature": "reservoirs"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": "lightblue",
            "stroke": "lightblue"
          }
        },
        {
          "data": {
            "url": "data/victoria.topojson",
            "format": {
              "type": "topojson",
              "feature": "victoria"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": null,
            "stroke": "gray",
            "strokeWidth": 4
          }
        },
        {
          "data": {
            "url": "data/towns.csv"
          },
          "encoding": {
            "longitude": {
              "field": "X",
              "type": "quantitative"
            },
            "latitude": {
              "field": "Y",
              "type": "quantitative"
            }
          },
          "layer": [
            {
              "mark": {
                "type": "circle",
                "fill": "lightgray",
                "stroke": "lightgray",
                "strokeWidth": 2
              }
            },
            {
              "mark": {
                "type": "text",
                "dy": -10,
                "align": "left"
              },
              "encoding": {
                "text": {
                  "field": "name",
                  "type": "nominal"
                }
              }
            }
          ]
        },
        {
          "data": {
            "url": "data/rivers.topojson",
            "format": {
              "type": "topojson",
              "feature": "rivers"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": null,
            "stroke": "lightblue",
            "strokeWidth": 2
          }
        },
        {
          "data": {
            "url": "data/graticles.topojson",
            "format": {
              "type": "topojson",
              "feature": "graticles"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": null,
            "stroke": "lightgray"
          }
        },
        {
          "data": {
            "url": "data/LocationsHeights.csv"
          },
          "params": [
            {
              "name": "station_select",
              "select": {
                "type": "point",
                "fields": [
                  "Site ID",
                  "Station "
                ]
              }
            }
          ],
          "mark": {
            "type": "circle",
            "tooltip": {
              "content": "data"
            }
          },
          "encoding": {
            "longitude": {
              "field": "Longitude",
              "type": "quantitative"
            },
            "latitude": {
              "field": "Latitude",
              "type": "quantitative"
            },
            "color": {
              "field": "MaxCategory",
              "type": "ordinal",
              "sort": [
                "Unclassified",
                "Below minor",
                "Minor",
                "Moderate",
                "Major"
              ],
              "title": "Flood level reached",
              "scale": {
                "domain": [
                  "Unclassified",
                  "Below minor",
                  "Minor",
                  "Moderate",
                  "Major"
                ],
                "range": [
                  "grey",
                  "green",
                  "orange",
                  "red",
                  "darkred"
                ]
              }
            },
            "size": {
              "field": "Max Height",
              "type": "quantitative",
              "title": "Maximum height (m)",
              "scale": {
                "domain": [
                  0,
                  10
                ],
                "range": [
                  0,
                  2000
                ]
              }
            }
          }
        }
      ]
    },
    {
      "width": 350,
      "height": 500,
      "data": {
        "url": "data/RiverHeights.csv"
      },
      "transform": [
        {
          "filter": "datum[\"Site ID\"] == (isDefined(station_select[\"Site ID\"]) ? station_select[\"Site ID\"] : 406202)"
        }
      ],
      "title": {
        "text": {
          "expr": "\"Heights for \" + (isDefined(station_select[\"Station \"]) ? station_select[\"Station \"] : \"Rochester Syphon\")"
        }
      },
      "layer": [
        {
          "encoding": {
            "x": {
              "field": "Day",
              "type": "temporal",
              "axis": {
                "title": "Date"
              }
            },
            "y": {
              "field": "Mean",
              "type": "quantitative",
              "axis": {
                "title": "River height (m)"
              }
            },
            "tooltip": [
              {
                "field": "Day",
                "type": "temporal",
                "title": "Date"
              },
              {
                "field": "Name",
                "type": "nominal"
              },
              {
                "field": "Basin",
                "type": "nominal"
              },
              {
                "field": "Mean",
                "type": "quantitative",
                "format": ".1f",
                "title": "Water level (m)"
              }
            ]
          },
          "mark": "line"
        },
        {
          "data": {
            "url": "data/LocationsHeights.csv"
          },
          "mark": {
            "type": "rule",
            "stroke": "darkred"
          },
          "encoding": {
            "y": {
              "field": "Major ",
              "type": "quantitative",
              "title": "Major flood level",
              "axis": {
                "title": ""
              }
            }
          },
          "transform": [
            {
              "filter": "datum[\"Site ID\"] == (isDefined(station_select[\"Site ID\"]) ? station_select[\"Site ID\"] : 406202)"
            }
          ]
        },
        {
          "data": {
            "url": "data/LocationsHeights.csv"
          },
          "mark": {
            "type": "text",
            "stroke": "darkred"
          },
          "encoding": {
            "y": {
              "field": "Major ",
              "type": "quantitative",
              "title": "Major flood level",
              "axis": {
                "title": ""
              }
            },
            "text": {
              "value": "Major flood level"
            }
          },
          "transform": [
            {
              "filter": "datum[\"Site ID\"] == (isDefined(station_select[\"Site ID\"]) ? station_select[\"Site ID\"] : 406202)"
            }
          ]
        },
        {
          "data": {
            "url": "data/LocationsHeights.csv"
          },
          "mark": {
            "type": "rule",
            "stroke": "red"
          },
          "encoding": {
            "y": {
              "field": "Moderate ",
              "type": "quantitative",
              "title": "Moderate flood level",
              "axis": {
                "title": ""
              }
            }
          },
          "transform": [
            {
              "filter": "datum[\"Site ID\"] == (isDefined(station_select[\"Site ID\"]) ? station_select[\"Site ID\"] : 406202)"
            }
          ]
        },
        {
          "data": {
            "url": "data/LocationsHeights.csv"
          },
          "mark": {
            "type": "text",
            "stroke": "red"
          },
          "encoding": {
            "y": {
              "field": "Moderate ",
              "type": "quantitative",
              "title": "Moderate flood level",
              "axis": {
                "title": ""
              }
            },
            "text": {
              "value": "Moderate flood level"
            }
          },
          "transform": [
            {
              "filter": "datum[\"Site ID\"] == (isDefined(station_select[\"Site ID\"]) ? station_select[\"Site ID\"] : 406202)"
            }
          ]
        },
        {
          "data": {
            "url": "data/LocationsHeights.csv"
          },
          "mark": {
            "type": "rule",
            "stroke": "orange"
          },
          "encoding": {
            "y": {
              "field": "Minor ",
              "type": "quantitative",
              "title": "Minor flood level",
              "axis": {
                "title": ""
              }
            }
          },
          "transform": [
            {
              "filter": "datum[\"Site ID\"] == (isDefined(station_select[\"Site ID\"]) ? station_select[\"Site ID\"] : 406202)"
            }
          ]
        },
        {
          "data": {
            "url": "data/LocationsHeights.csv"
          },
          "mark": {
            "type": "text",
            "stroke": "orange"
          },
          "encoding": {
            "y": {
              "field": "Minor ",
              "type": "quantitative",
              "title": "Minor flood level",
              "axis": {
                "title": ""
              }
            },
            "text": {
              "value": "Minor flood level"
            }
          },
          "transform": [
            {
              "filter": "datum[\"Site ID\"] == (isDefined(station_select[\"Site ID\"]) ? station_select[\"Site ID\"] : 406202)"
            }
          ]
        }
      ]
    }
  ]
}