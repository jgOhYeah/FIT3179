{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/River_Heights_Selected.csv"
  },
  "title": {
    "text": "Water levels over time"
  },
  "params": [
    {
      "name": "Basin",
      "value": "Campaspe River Basin",
      "bind": {
        "input": "select",
        "options": [
          "Campaspe River Basin",
          "Murray Basin",
          "Goulburn River Basin"
        ]
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Basin == Basin"
    }
  ],
  "hconcat": [
    {
      "width": 350,
      "height": 500,
      "layer": [
        {
          "encoding": {
            "x": {
              "field": "Day",
              "type": "temporal",
              "axis": {
                "title": "Date"
              }
            },
            "y": {
              "field": "Mean",
              "type": "quantitative",
              "axis": {
                "title": "River height (m)"
              }
            },
            "color": {
              "field": "Station",
              "type": "nominal"
            },
            "tooltip": [
              {
                "field": "Day",
                "type": "temporal",
                "title": "Date"
              },
              {
                "field": "Station",
                "type": "nominal"
              },
              {
                "field": "Basin",
                "type": "nominal"
              },
              {
                "field": "Mean",
                "type": "quantitative",
                "format": ".1f",
                "title": "Water level (m)"
              }
            ]
          },
          "mark": "line"
        },
        {
          "mark": "text",
          "data": {
            "values": [
              {
                "Comment": "Lake Eppalock sensor is disrupted",
                "Day": "2022-10-14",
                "yPos": 50
              }
            ]
          }
        }
      ]
    },
    {
      "width": 350,
      "height": 500,
      "title": "Maximum river heights during the 2022 Northern Victoria floods",
      "projection": {
        "type": "equirectangular",
        "center": [
          144.7,
          -36.5
        ],
        "scale": 40000
      },
      "layer": [
        {
          "data": {
            "url": "data/reservoirs.topojson",
            "format": {
              "type": "topojson",
              "feature": "reservoirs"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": "lightblue",
            "stroke": "lightblue"
          }
        },
        {
          "data": {
            "url": "data/victoria.topojson",
            "format": {
              "type": "topojson",
              "feature": "victoria"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": null,
            "stroke": "gray",
            "strokeWidth": 4
          }
        },
        {
          "data": {
            "url": "data/towns.csv"
          },
          "encoding": {
            "longitude": {
              "field": "X",
              "type": "quantitative"
            },
            "latitude": {
              "field": "Y",
              "type": "quantitative"
            }
          },
          "layer": [
            {
              "mark": {
                "type": "circle",
                "fill": "lightgray",
                "stroke": "lightgray",
                "strokeWidth": 2
              }
            },
            {
              "mark": {
                "type": "text",
                "dy": -10,
                "align": "left"
              },
              "encoding": {
                "text": {
                  "field": "name",
                  "type": "nominal"
                }
              }
            }
          ]
        },
        {
          "data": {
            "url": "data/rivers.topojson",
            "format": {
              "type": "topojson",
              "feature": "rivers"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": null,
            "stroke": "lightblue",
            "strokeWidth": 2
          }
        },
        {
          "data": {
            "url": "dta/graticles.topojson",
            "format": {
              "type": "topojson",
              "feature": "graticles"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": null,
            "stroke": "lightgray"
          }
        },
        {
          "data": {
            "url": "data/water_levels.csv"
          },
          "mark": {
            "type": "circle",
            "tooltip": {
              "content": "data"
            },
            "fill": "green"
          },
          "encoding": {
            "longitude": {
              "field": "Longitude",
              "type": "quantitative"
            },
            "latitude": {
              "field": "Latitude",
              "type": "quantitative"
            },
            "size": {
              "field": "Max Height",
              "type": "quantitative",
              "title": "Maximum height compared to 01/10/2022 (m)",
              "scale": {
                "domain": [
                  0,
                  10
                ],
                "range": [
                  0,
                  2000
                ]
              },
              "legend": {
                "orient": "right",
                "gridAlign": "all"
              }
            },
            "tooltip": [
              {
                "field": "Name",
                "type": "nominal",
                "title": "Station"
              },
              {
                "field": "Max Height",
                "type": "quantitative",
                "title": "Maximum height increase from 01/10/2022",
                "format": "m"
              },
              {
                "field": "Days",
                "type": "quantitative",
                "title": "Days since 01/10/2022 of maximum height"
              }
            ]
          }
        }
      ]
    }
  ]
}